extends _shared
// This is mixin for Select Options
include mixins/select-option
block body
	.models
		h2 Models we work on
		//- Implement sorting here
		form(class='form-inline', action='/models',method='get')
			.form-group
				label(for='sort') SortBy :
				select(id='sort', name='sort' class='form-control')
					for sort in sorts
						mixin select-option(sort.displayText, sort.value, sort)
			input(type='submit', class='btn btn-default' value='Search')
		for model in models
			h4= model